@model List<EMS.Domain.Models.Notification>

@{
    ViewData["Title"] = "Notifications";
}

<div class="container mt-4">
    <h2>Notifications</h2>
    <div class="list-group">
        @foreach (var notification in Model)
        {
            <div class="list-group-item list-group-item-action flex-column align-items-start mb-2 rounded">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@notification.Message</h5>
                    <small>@notification.CreatedAt.ToString("g")</small>
                </div>
                <p class="mb-1">@(notification.IsRead ? "Read" : "Unread")</p>
            </div>
        }
    </div>
</div>