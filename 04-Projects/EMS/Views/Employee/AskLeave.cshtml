@model EMS.Domain.Models.LeaveRequest

@{
    ViewData["Title"] = "Create Leave Request";
}

<div class="max-w-2xl mx-auto p-6 bg-white rounded-xl shadow-md">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Create Leave Request
    </h2>

    <form asp-action="CreateLeaveRequest" asp-controller="Employee" class="space-y-6">
        <div class="space-y-2">
            <label asp-for="StartDate" class="block text-sm font-medium text-gray-700">
                <svg xmlns="http://www.w3.org/2000/svg" class="inline h-4 w-4 mr-1 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                Start Date
            </label>
            <input asp-for="StartDate" type="date" class="block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="StartDate" class="text-sm text-red-600"></span>
        </div>

        <div class="space-y-2">
            <label asp-for="EndDate" class="block text-sm font-medium text-gray-700">
                <svg xmlns="http://www.w3.org/2000/svg" class="inline h-4 w-4 mr-1 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                End Date
            </label>
            <input asp-for="EndDate" type="date" class="block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="EndDate" class="text-sm text-red-600"></span>
        </div>

        <div class="space-y-2">
            <label asp-for="LeaveType" class="block text-sm font-medium text-gray-700">
                <svg xmlns="http://www.w3.org/2000/svg" class="inline h-4 w-4 mr-1 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
                Leave Type
            </label>
            <select asp-for="LeaveType" class="block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                    asp-items="Html.GetEnumSelectList<EMS.Domain.Enums.LeaveType>()">
                <option value="">-- Select Leave Type --</option>
            </select>
            <span asp-validation-for="LeaveType" class="text-sm text-red-600"></span>
        </div>

        <div class="space-y-2">
            <label asp-for="Reason" class="block text-sm font-medium text-gray-700">
                <svg xmlns="http://www.w3.org/2000/svg" class="inline h-4 w-4 mr-1 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                </svg>
                Reason
            </label>
            <textarea asp-for="Reason" rows="4" class="block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"></textarea>
            <span asp-validation-for="Reason" class="text-sm text-red-600"></span>
        </div>

        <div class="pt-4">
            <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Submit Request
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}