@model EMS.Domain.Models.Employee;

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Edit Your Profile</h4>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateProfile" asp-controller="Profile" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Profile Picture Section -->
                        <div class="text-center mb-4">
                            <div class="profile-picture-container mx-auto">
                                @* <img id="profilePicturePreview" src="@(Url.Content(Model.ProfilePicture) ?? "~/img/default-user.png")" *@
                                @*      alt="Profile Picture" class="profile-picture"> *@
                                <img id="profilePicturePreview" src="@(string.IsNullOrEmpty(Model.ProfilePicture) ? Url.Content("~/img/default-user.png") : Model.ProfilePicture)"
                                     alt="Profile Picture" class="profile-picture" />
                                <div class="profile-picture-overlay" onclick="document.getElementById('profileImage').click()">
                                    <i class="fas fa-camera"></i>
                                </div>
                            </div>
                            @* <input type="hidden" name="ProfilePicture" asp-for="ProfilePicture" id="profilePictureUrl" /> *@
                            <input type="file" id="profileImage" asp-for="ProfilePicture" accept="image/*" style="display: none;"
                                   onchange="previewImage(this, 'profilePicturePreview')">
                            <small class="text-muted d-block mt-2">Click on your image to change</small>
                        </div>

                        <!-- Personal Information -->
                        <div class="mb-4">
                            <h5 class="section-title">Personal Information</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="FullName" class="form-label">Full Name</label>
                                    <input asp-for="FullName" class="form-control" required>
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Email" class="form-label">Email</label>
                                    <input asp-for="Email" class="form-control" readonly>
                                </div>
                            </div>
                        </div>

                        <!-- Contact Information -->
                        <div class="mb-4">
                            <h5 class="section-title">Contact Information</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                    <input asp-for="PhoneNumber" class="form-control">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                
                            </div>
                        </div>

                        <!-- Work Information (Readonly) -->
                        <div class="mb-4">
                            <h5 class="section-title">Work Information</h5>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">Status</label>
                                    <input class="form-control" value="@Model.Status" readonly>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Profile
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

    <style>
        .profile-picture-container {
            position: relative;
            width: 150px;
            height: 150px;
            border-radius: 50%;
            overflow: hidden;
            cursor: pointer;
            border: 3px solid #e9ecef;
            transition: all 0.3s ease;
        }

            .profile-picture-container:hover {
                border-color: #0d6efd;
            }

        .profile-picture {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .profile-picture-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .profile-picture-container:hover .profile-picture-overlay {
            opacity: 1;
        }

        .section-title {
            color: #495057;
            border-bottom: 1px solid #dee2e6;
            padding-bottom: 0.5rem;
            margin-bottom: 1.5rem;
            font-size: 1.1rem;
        }

        .card {
            border: none;
            border-radius: 10px;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
        }
    </style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Preview selected image
        function previewImage(input, previewId) {
            const preview = document.getElementById(previewId);
            const file = input.files[0];

            if (file) {
                const reader = new FileReader();

                reader.onload = function(e) {
                    preview.src = e.target.result;
                }

                reader.readAsDataURL(file);
            }
        }
    </script>
}