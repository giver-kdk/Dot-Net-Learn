<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Spiralogics IdeaPool</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/glightbox/dist/css/glightbox.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/glightbox/dist/js/glightbox.min.js"></script>
    <link href="~/css/site.css" rel="stylesheet" />
        </head>
<body>
    <header class="header flex items-center bg-gray-100 p-4 shadow-md">
        <img src="~/images/spiral_logo.png" class="w-12 h-12 mr-4" alt="Spiralogics Logo" />
        <div>
            <div class="logo text-xl font-semibold text-gray-800">Spiralogics Ideaportal</div>
        </div>

        <nav class="bg-white-800 p-4">
            <ul class="flex space-x-4 text-white">
                <li><a href="/" class="navitem">Home</a></li>
                <li><a href="/MyIdeas" class="navitem">My Ideas</a></li>
                <li><a href="/DroppedIdeas" class="navitem">Dropped Ideas</a></li>
            </ul>
        </nav>

        <!-- User Greeting & Logout Form -->
        <div class="ml-auto flex items-center space-x-4">
            <span><p class="greeting">Welcome, @User.Identity.Name!</p></span>
            <form action="@Url.Action("Logout", "Account")" method="post" class="flex items-center space-x-2">
                @Html.AntiForgeryToken()
                <button type="submit" class="bg-red-500 text-white py-1 px-3 mt-4 rounded-full hover:bg-red-600 transition duration-300">Log Out</button>
            </form>
        </div>
    </header>

    @RenderBody()
    @RenderSection("Scripts", required: false)

    <div id="addIdeaModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Add Your Brilliant Idea</h2>
            <input type="text" id="newIdeaInput" placeholder="Enter your idea here...">
            <button id="submitIdea">Add Idea</button>
        </div>
    </div>

    <script>
        // JavaScript for modal and adding ideas
        const modal = document.getElementById("addIdeaModal");
        const addButton = document.querySelector(".add-idea");
        const closeButton = document.querySelector(".close");
        const submitButton = document.getElementById("submitIdea");
        const newIdeaInput = document.getElementById("newIdeaInput");

        addButton.onclick = function() {
            modal.style.display = "block";
        }

        closeButton.onclick = function() {
            modal.style.display = "none";
        }

        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }

        submitButton.onclick = function() {
            const newIdea = newIdeaInput.value.trim();
            if (newIdea) {
                const newBubble = document.createElement('div');
                newBubble.className = 'idea-bubble floating';
                newBubble.textContent = newIdea;
                newBubble.style.animationDelay = `${Math.random() * 4}s`;
                addButton.parentNode.insertBefore(newBubble, addButton);
                newIdeaInput.value = '';
                modal.style.display = "none";
            }
        }

        document.querySelectorAll('.idea-bubble:not(.add-idea)').forEach(bubble => {
            bubble.addEventListener('click', function() {
                alert(`Exploring: ${this.textContent}\nThis idea has potential! Let's dive deeper into ${this.textContent} and see how we can innovate in this area.`);
            });
        });
    </script>
</body> 
</html>
